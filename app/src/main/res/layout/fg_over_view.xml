<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#fafafa"
              android:padding="8dp"
              android:gravity="center">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.ppandroid.app.widget.wheelview.FitChartHalf
                    style="@style/chart_style"
                    android:layout_gravity="center"
                    app:strokeSize="10dp"
                    app:animationMode="overdraw"
                    android:id="@+id/fitChart" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="200dp"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:text="今日用电"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="bottom"
                            android:text="24.54"
                            android:textSize="30sp"
                            android:textColor="@color/chart_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:padding="4dp"
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:text="万kwh"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:text="累计：144765元" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:text="碳排放：192612.3kg" />

                </LinearLayout>
            </FrameLayout>

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Values"/>
            
        </LinearLayout>
    </ScrollView>


</LinearLayout>

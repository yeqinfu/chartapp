<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ppandroid.app.AC_Login">
    <TextView
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/bar_title"
        android:textColor="@color/color_07"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <View
        android:background="@color/color_03"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textColor="@color/color_07"
            android:textSize="@dimen/bar_title"
            android:text="账   号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.ppandroid.app.widget.ClearEditText
            android:singleLine="true"

            android:id="@+id/et_account"
            android:layout_marginLeft="18dp"
            android:textColor="@color/color_07"
            android:textSize="@dimen/bar_title"
            android:hint="请输入账号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_03"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textColor="@color/color_07"
            android:textSize="@dimen/bar_title"
            android:text="密   码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.ppandroid.app.widget.ClearEditText
            android:singleLine="true"
            android:id="@+id/et_password"
            android:layout_marginLeft="18dp"
            android:textColor="@color/color_07"
            android:inputType="textPassword"
            android:textSize="@dimen/bar_title"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_03"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_solid_color01_corner_20dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/first_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <LinearLayout
        android:layout_marginTop="21dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:visibility="gone"
            android:id="@+id/checkbox"
            android:textSize="@dimen/time_text"
            android:text="记住账号"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:visibility="gone"
            android:layout_marginLeft="100dp"
            android:gravity="center|right"
            android:textSize="@dimen/time_text"
            android:textColor="@color/color_07"
            android:text="忘记密码？"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>

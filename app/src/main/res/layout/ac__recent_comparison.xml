<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ppandroid.app.home.news.AC_RecentComparison">
    <LinearLayout
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_fanzhuan"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>
    <View
        android:background="@color/color_05"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <FrameLayout
            android:id="@+id/fg_01"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_01"
                android:layout_gravity="center"
                android:src="@drawable/icon_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_time01"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/v_select01"
                    android:background="@color/vcolor06"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/tv_date01"
                    android:text="2014"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_del01"
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"

                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>
        </FrameLayout>
        <View
            android:background="@color/color_05"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fg_02"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_02"
                android:layout_gravity="center"
                android:src="@drawable/icon_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_time02"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/v_select02"
                    android:background="@color/vcolor07"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/tv_date02"
                    android:text="2014"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_del02"
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </FrameLayout>
        <View
            android:background="@color/color_05"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fg_03"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_03"
                android:layout_gravity="center"
                android:src="@drawable/icon_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_time03"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/v_select03"
                    android:background="@color/vcolor08"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/tv_date03"
                    android:text="2014"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_del03"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </FrameLayout>
        <View
            android:background="@color/color_05"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fg_04"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_04"
                android:layout_gravity="center"
                android:src="@drawable/icon_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_time04"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/v_select04"
                    android:background="@color/vcolor09"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/tv_date04"
                    android:text="2014"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_del04"
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </FrameLayout>
        <View
            android:background="@color/color_05"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fg_05"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_05"
                android:layout_gravity="center"
                android:src="@drawable/icon_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_time05"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/v_select05"
                    android:background="@color/vcolor10"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:id="@+id/tv_date05"
                    android:text="2014"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_del05"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>
    <View
        android:background="@color/color_05"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <com.ppandroid.app.widget.linechart.MultipleChartView
        android:id="@+id/chartview"
        app:bgcolor="#ffffff"
        app:isScroll="false"
        app:linecolor="#02bbb7"
        app:xylinecolor="#e2e2e2"
        app:xylinewidth="1dp"
        app:xytextcolor="#7e7e7e"
        app:xytextsize="12sp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    

</LinearLayout>

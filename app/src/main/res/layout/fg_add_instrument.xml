<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_head_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_03"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="仪表信息"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>

            <!--所属上级-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属上级"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <TextView
                    android:id="@+id/tv_parent_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text="已经是最高级"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--编号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--能源分类-->
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="能源分类"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <TextView
                    android:id="@+id/tv_choose_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/forward_right"
                    android:gravity="right|center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--别名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="别名"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--位置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_position"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:id="@+id/v_charge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--负荷-->
            <LinearLayout
                android:id="@+id/ll_charge"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负荷"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_charge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:id="@+id/v_rate"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <!--倍率-->
            <LinearLayout
                android:id="@+id/ll_rate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="倍率"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_rate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>

            <!--编码地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编码地址"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <EditText
                    android:id="@+id/et_codeAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/input_msg"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_03"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="关联信息"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>
            <!--重点设备-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重点设备"
                    android:textColor="@color/color_07"
                    android:textSize="@dimen/bar_title"/>

                <TextView
                    android:id="@+id/tv_choose_instruemnt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/forward_right"
                    android:gravity="right|center_vertical"
                    android:hint="请选择(可选)"
                    android:textColor="@color/color_04"
                    android:textColorHint="@color/color_06"
                    android:textSize="@dimen/bar_title"/>

            </LinearLayout>



            <!--温度-->
            <View
                android:id="@+id/v_temprature"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <TextView
                android:id="@+id/tv_temprature"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_03"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="温度报警阈值"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>
            <!--温度-->
            <LinearLayout
                android:id="@+id/ll_temperature_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度上限"
                        android:textColor="@color/color_07"
                        android:textSize="@dimen/bar_title"/>

                    <EditText
                        android:id="@+id/tv_max_temprature"
                        android:layout_width="0dp"
                        android:inputType="numberDecimal"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/input_msg"
                        android:textColor="@color/color_04"
                        android:textColorHint="@color/color_06"
                        android:textSize="@dimen/bar_title"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="°C"
                        android:textColor="@color/color_04"
                        android:textSize="@dimen/bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度下限"
                        android:textColor="@color/color_07"
                        android:textSize="@dimen/bar_title"/>

                    <EditText
                        android:id="@+id/tv_min_temprature"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/input_msg"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_04"
                        android:textColorHint="@color/color_06"
                        android:textSize="@dimen/bar_title"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="°C"
                        android:textColor="@color/color_04"
                        android:textSize="@dimen/bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>



            <!--湿度-->
            <View
                android:id="@+id/v_humidity"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>
            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_03"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:inputType="number"
                android:text="湿度报警阈值"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>
            <!--湿度-->
            <LinearLayout
                android:id="@+id/ll_humidity_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度上限"
                        android:textColor="@color/color_07"
                        android:textSize="@dimen/bar_title"/>

                    <EditText
                        android:id="@+id/tv_max_humidity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/input_msg"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_04"
                        android:textColorHint="@color/color_06"
                        android:textSize="@dimen/bar_title"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="%"
                        android:textColor="@color/color_04"
                        android:textSize="@dimen/bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度下限"
                        android:textColor="@color/color_07"
                        android:textSize="@dimen/bar_title"/>

                    <EditText
                        android:id="@+id/tv_min_humidity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="@string/input_msg"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_04"
                        android:textColorHint="@color/color_06"
                        android:textSize="@dimen/bar_title"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="%"
                        android:textColor="@color/color_04"
                        android:textSize="@dimen/bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_03"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
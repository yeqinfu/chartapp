<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:drawableLeft="@drawable/shand"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:text="fdaf"
            android:textColor="@color/color_07"
            android:textSize="@dimen/bar_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/tv_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="区域等级"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="一级"
                android:textColor="@color/color_01"
                android:textSize="@dimen/sub_title"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:layout_marginLeft="14dp"
                android:background="@color/color_03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="所属上级"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="7878"
                android:textColor="@color/color_01"
                android:textSize="@dimen/sub_title"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward_right"/>


    </RelativeLayout>

    <!--Edit-->
    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="#dddddd"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="编辑"
        android:textColor="@android:color/white"/>

    <!--delete-->
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="#FFFF0000"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="删除"
        android:textColor="@android:color/white"/>
</LinearLayout>

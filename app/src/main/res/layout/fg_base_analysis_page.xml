<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_marginTop="7dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="14dp"
        android:textSize="@dimen/second_title"
        android:textStyle="bold"
        android:textColor="@color/color_07"
        android:text="2014"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.ppandroid.app.widget.graphical.demoview.DountChart01View
            android:id="@+id/v_dount_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本日用电"/>

            <TextView
                android:id="@+id/tv_totalKwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.39"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万kwh"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:background="@color/color_03"
        android:layout_width="match_parent"
        android:layout_height="7dp"/>
    
    <LinearLayout
        android:paddingLeft="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="@dimen/sub_title"
            android:textColor="@color/color_04"
            android:gravity="center_vertical"
            android:text="名称"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginRight="40dp"
            android:textSize="@dimen/sub_title"
            android:textColor="@color/color_04"
            android:gravity="center_vertical"
            android:text="占比%"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginRight="20dp"
            android:textSize="@dimen/sub_title"
            android:textColor="@color/color_04"
            android:gravity="center_vertical"
            android:text="能耗kwh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/v_holder"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:background="@color/color_03"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
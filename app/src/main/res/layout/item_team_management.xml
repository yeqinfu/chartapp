<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingRight="15dp"
              android:paddingLeft="15dp"
              android:layout_width="match_parent"
              android:layout_height="75dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/tv_name"
            android:gravity="center"
            android:text="dfsdf"
            android:textColor="@color/color_07"
            android:textSize="@dimen/bar_title"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/bumen"
                android:text="子部门"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_department_number"
                android:layout_marginLeft="18dp"
                android:textColor="@color/color_07"
                android:textSize="@dimen/sub_title"
                android:drawablePadding="5dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_04"
                android:textSize="@dimen/sub_title"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/yg"
                android:text="员工"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_employee_number"
                android:layout_marginLeft="18dp"
                android:textColor="@color/color_07"
                android:textSize="@dimen/sub_title"
                android:drawablePadding="5dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/forward_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>
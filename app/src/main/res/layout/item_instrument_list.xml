<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:layout_width="match_parent"
              android:layout_height="56dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="56dp">
        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/shand"
            android:id="@+id/tv_name"
            android:gravity="center_vertical"
            android:text="fdadf"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/tv_level"
            android:textColor="@color/white"
            android:layout_marginTop="7dp"
            android:background="@color/color_01"
            android:gravity="center"
            android:layout_below="@+id/tv_name"
            android:text="1级"
            android:textSize="10sp"
            android:layout_width="30dp"
            android:layout_height="13dp"/>
        <TextView
            android:id="@+id/tv_number"
            android:textColor="@color/color_01"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="fdadfs"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_slid_green_corner_4dp"
        android:textColor="@color/white"
        android:text="正常"
        android:layout_width="60dp"
        android:layout_height="24dp"/>
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:src="@drawable/forward_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>